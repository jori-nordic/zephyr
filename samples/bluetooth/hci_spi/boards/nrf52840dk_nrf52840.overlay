&spi0 {
	compatible = "nordic,nrf-spis";
	status = "okay";
	def-char = <0x00>;

	mosi-pin = <3>;
	miso-pin = <8>;
	csn-pin = <28>;
	sck-pin = <29>;

	bt-hci@0 {
		compatible = "zephyr,bt-hci-spi-slave";
		reg = <0>;
		irq-gpios = <&gpio0 30 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
	};
};

&i2c0 {
	status = "disabled";
};
